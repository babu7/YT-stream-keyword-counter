mixin player
  //- h5 現在播放的是【#{channel.name}】
  h5 即時畫面
  div.video-wrapper
    iframe(src=`https://www.youtube.com/embed/${channel.vid}?autoplay=1&mute=1`, frameborder='0', allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='')

if history.length <= 0
  .row
    .col-xl-12
      +player()
else
  .row
    .col-xl-6
      +player()
      #status.alert.alert-info(role='alert')
        | 即時狀態載入中...
      #progress.progress
        .progress-bar.progress-bar-striped.bg-info.progress-bar-animated(role='progressbar', aria-valuenow='75', aria-valuemin='0', aria-valuemax='100')
    .col-xl-6
        h5 文字實況
        ul#history.list-group
          each h in history.reverse()
            li.list-group-item=`${moment(h[0]).format('lll')}: ${h[1]}`
  .row
    #chart.col-lg-12
        h4 近24小時
        div.canvas-wrapper
          canvas
.row
  .col-lg-12
    h4 其他直播台
  each c in channels
    .col-lg-4
        h6 #[a.channel-link(target="_blank",href=`/?id=${c.id}`)=c.name]
        div.video-wrapper
          iframe(src=`https://www.youtube.com/embed/${c.vid}?autoplay=1&mute=1`, frameborder='0', allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='')